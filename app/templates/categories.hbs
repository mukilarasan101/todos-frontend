Categories
<div class="row">
{{#if model}}
  {{#each model as |category|}}
    <div class="col s12 m6">
      <!-- Basic Card -->
      <div class="card <!--blue-grey darken-1-->">
        <div class="card-content <!--white-text-->">
          <span class="card-title" style="cursor:pointer">{{#link-to "category.todos" category class="btn waves-effect waves-teal"}}{{category.title}}{{/link-to}}</span>
          <div style="position: relative;">
            <div class="fixed-action-btn horizontal" style="position: absolute; display: inline-block;">
              <a class="btn-floating btn-large red">
                <i class="large material-icons">menu</i>
              </a>
              <ul>
                <li>{{#link-to "category.edit" category class="btn-floating blue" style="transform: scaleY(0.4) scaleX(0.4) translateY(0px) translateX(40px); opacity: 0;"}}<i class="material-icons">edit</i>{{/link-to}}</li>
                 <li><a class="btn-floating red darken-1" style="transform: scaleY(0.4) scaleX(0.4) translateY(0px) translateX(40px); opacity: 0;"><i class="material-icons" {{ action "showDeleteAlert" category}}>delete</i></a></li>
              </ul>
            </div>
          </div>
            <div><br></div>
          {{#if category.description}}
            <p class="truncate tooltipped" data-position="bottom" data-delay="50" data-tooltip="{{category.description}}">{{category.description}}</p>
          {{else}}
            <p class="truncate">&nbsp;</p>
          {{/if}}
        </div>
        <div class="card-action">
        </div>
        <div id="modal_{{category.id}}" class="card modal bottom-sheet center-align" style="display:none">
          <div class="card-content">
            <span class="card-title">Are you sure you want to delete "<span class='blue-grey darken-1 white-text'>{{category.title}}</span>" ?</span>
          </div>
          <div class="card-action">
            <button href="#!" class="modal-action modal-close waves-effect waves-red btn-flat red-text">Cancel</button>
            <button href="#!" {{ action "deleteRecord" category}} class="modal-action modal-close waves-effect waves-green btn-flat green-text">Yes, Delete</button>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <div class="col s12 m6">
            <!-- Basic Card -->
            <div class="card blue-grey darken-1">
              <div class="card-content white-text">
                <span class="card-title">No Record found</span>
                <p>Please add the category</p>
              </div>
              <div class="card-action">
                {{#link-to "category.add"}}add{{/link-to}}
              </div>
            </div>
          </div>
{{/if}}
</div>

<div class="fixed-action-btn" style="bottom: 45px; right: 24px;">
  <a class="btn-floating btn-large red">
    {{#link-to "category.add"}}<i class="large material-icons">add</i>{{/link-to}}
  </a>
</div>


